---
import { breakpoints } from 'src/variables'

import imgM from './src/images/XXXXX'
import imgT from './src/images/XXXXX'
import imgD from './src/images/XXXXX'
---

<picture>
    <source 
        srcset={imgD} 
        media={`(min-width: ${breakpoints.lg})`}/>
    <source 
        srcset={imgT} 
        media={`(min-width: ${breakpoints.md})`}/>
    <img 
        class="w-full min-h-[300px] md:max-h-[600px] object-cover object-left"
        src={imgM}
        alt="XXXXX"/>
